<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="6dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Für Inhalationsbewertung gültiges Produkt per Bluetooth verbinden"
            android:textSize="20sp"
            android:id="@+id/TextView_Search_BT_ID"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            />

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:id="@+id/Button_Inhalation_ID"
        android:text="@string/Button_Inhalation_Text"
        android:textSize="20sp"
        android:onClick="Inhalation_On_Click"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:id="@+id/Button_Medikamente_ID"
        android:text="@string/Button_Medikamente_Text"
        android:textSize="20sp"
        android:onClick="Medikamente_On_Click"
        android:layout_marginBottom="20dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pat_id"
            android:layout_width="161dp"
            android:layout_height="36dp"
            android:baselineAligned="false"
            android:hint="Max 3 chars"
            android:inputType="number"
            android:text="ZzZ" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>